<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.edu.ifba.saj.fwads.controller.ListLivroController">
   <center>
      <TableView fx:id="tblLivro" prefHeight="347.0" prefWidth="489.0">
        <columns>
          <TableColumn fx:id="columnTitulo" editable="false" minWidth="-1.0" prefWidth="201.0" text="Título" />
          <TableColumn fx:id="columnSubTitulo" editable="false" minWidth="-1.0" prefWidth="173.0" text="Subtítulo" />
            <TableColumn fx:id="columnISBN" editable="false" minWidth="-1.0" prefWidth="225.0" text="ISBN" />
            <TableColumn fx:id="columnAutor" editable="false" minWidth="-1.0" prefWidth="225.0" text="Autor" />
        </columns>
      </TableView>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" styleClass="main" stylesheets="@assets/style.css" BorderPane.alignment="CENTER">
        <buttons>
          <Button mnemonicParsing="false" onAction="#showNovoLivro" styleClass="bottom" stylesheets="@assets/style.css" text="Novo Livro" />
        </buttons>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </ButtonBar>
   </bottom>
</BorderPane>
